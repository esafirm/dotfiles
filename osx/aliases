# MacOS specific aliases

alias setdns="networksetup -setdnsservers"
alias getdns="networksetup -getdnsservers"

# Open
alias chrome="open -a 'Google Chrome'"
alias simulator="open /Applications/Xcode.app/Contents/Developer/Applications/Simulator.app"
alias simulatorls="xcrun simctl list devices"
alias simulatorprune="xcrun simctl delete unavailable && rm -rf ~/Library/Logs/CoreSimulator"

# Xcode
alias xcode="open *.xcworkspace"

# Android Studio
alias androidstudio="open -a /Applications/Android\ Studio.app"