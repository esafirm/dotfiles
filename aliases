# Android Studio
alias androidstudio="open -a /Applications/Android\ Studio.app"

# Xcode
alias xcode="open *.xcworkspace"

## Keytool Android
alias keytool-google="keytool -list -v -keystore"
function keytool-facebook {
    keytool -exportcert -alias androiddebugkey -keystore $1 | openssl sha1 -binary | openssl base64
}

## Disk Usage
alias doosh="du -hs"

## Latest File
alias las="ls -t | head -n1"

## Refresh ZSH
alias refresh="source ~/.zshrc"

## Git
alias gitlog="git log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=relative"
alias gitsa="git stash"
alias gmoff="git merge --no-ff"
alias glast="git rev-parse --short"
alias glasthead="git rev-parse --short HEAD"
alias gammen="git add -A && git commit --amend" 
alias gforce="git push origin HEAD -f"

## Python
alias virtualenvwrapper="source /usr/local/bin/virtualenvwrapper.sh"
alias simplehttpserver="python ~/dotfiles/python/server.py"
alias python="python3"
alias pip="pip3" 
alias pip2="pip"
alias uuid="python -c 'import sys,uuid; sys.stdout.write(uuid.uuid4().hex)' | pbcopy && pbpaste && echo"
alias piplist="pip3 list --format=legacy"
alias json="python -mjson.tool"

## SpeedTest
alias speedtest="~/dotfiles/speedtest-cli"

## Disk Usage
alias dush="du -sh"

## NPM
alias npmls="npm ls --depth=0"

## Genymotion
alias geny="open -a /Applications/Genymotion.app/Contents/MacOS/player.app --args --vm-name"

## Android
alias ains="adb install"
alias auins="adb uninstall"
alias adb-restart="adb kill-server && adb root"

## Dropbox
alias dropbox="~/dotfiles/dropbox/uploader.sh"

## VSCode
function vscode {  
    if [[ $# = 0 ]]
    then
        open -a "Visual Studio Code"
    else
        local argPath="$1"
        [[ $1 = /* ]] && argPath="$1" || argPath="$PWD/${1#./}"
        open -a "Visual Studio Code" "$argPath"
    fi
}

# Safe-rm
alias rm="safe-rm"

# Termbin
alias tb="nc termbin.com 9999"

# Curernt IP
alias myip="ifconfig | sed -En 's/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p'"

# Grep with insensitive case
alias igrep="grep -i"
