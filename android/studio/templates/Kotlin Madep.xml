<templateSet group="Kotlin Madep">
  <template name="bv" value="@BindView($VIEW_ID$) lateinit var $VAR_NAME$:$VAR_TYPE$" description="Butterknife BindView" toReformat="true" toShortenFQNames="true">
    <variable name="VIEW_ID" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VAR_NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VAR_TYPE" expression="classNameComplete()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
      <option name="KOTLIN_STATEMENT" value="true" />
    </context>
  </template>
  <template name="inject" value="@Inject lateinit var $VAR$" description="Inject property with @Inject annotation" toReformat="true" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN_CLASS" value="true" />
      <option name="KOTLIN_STATEMENT" value="true" />
    </context>
  </template>
  <template name="lazy" value="val $name$ by lazy { $init$ }" description="Lazy property" toReformat="false" toShortenFQNames="true">
    <variable name="name" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="init" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="KOTLIN" value="true" />
    </context>
  </template>
  <template name="runi" value="return Unit.INSTANCE;" description="return Unit.Instance" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
</templateSet>